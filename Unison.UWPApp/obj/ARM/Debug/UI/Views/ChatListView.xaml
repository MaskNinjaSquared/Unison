<UserControl x:ConnectionId='1'
    x:Class="Unison.UWPApp.UI.Views.ChatListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Unison.UWPApp.UI.Views"
    xmlns:models="using:Unison.UWPApp.Models"
    xmlns:controls="using:Unison.UWPApp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="800"
    d:DesignWidth="400">

    <UserControl.Resources>
        <DataTemplate x:Key="ChatItemTemplate"                             >
            <Grid x:ConnectionId='2' Height="72" Padding="12,0" Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="56"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Avatar with initial fallback + profile picture overlay -->
                <Grid Width="48" Height="48" HorizontalAlignment="Left">
                    <!-- Fallback: Colored circle with initial (hidden when picture is loaded) -->
                    <Ellipse x:ConnectionId='6' Width="48" Height="48" Fill="{StaticResource UnisonGreenBrush}"
                                                                                                                                         />
                    <TextBlock x:ConnectionId='7'                                      
                               FontSize="20" FontWeight="SemiBold" Foreground="White"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               FontFamily="{StaticResource MainFontSemibold}"
                                                                                                                                           />
                    
                    <!-- Profile picture (circular clip) -->
                    <Ellipse x:ConnectionId='8' Width="48" Height="48"                                                                                                     >
                        <Ellipse.Fill>
                            <ImageBrush x:ConnectionId='9'                                                                                                        
                                        Stretch="UniformToFill"/>
                        </Ellipse.Fill>
                    </Ellipse>
                </Grid>
                
                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="12,0,0,0">
                    <TextBlock x:ConnectionId='4'                                   FontSize="16" FontFamily="{StaticResource MainFontSemibold}" TextTrimming="CharacterEllipsis"/>
                    <TextBlock x:ConnectionId='5'                                          FontSize="14" Foreground="#888" TextTrimming="CharacterEllipsis" Margin="0,2,0,0" FontFamily="{StaticResource MainFont}"/>
                </StackPanel>
                
                <TextBlock x:ConnectionId='3' Grid.Column="2"                                        FontSize="12" Foreground="#888" VerticalAlignment="Center" FontFamily="{StaticResource MainFont}"/>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>

    <Grid x:ConnectionId='10' x:Name="ChatListGrid" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Mobile-style Header -->
        <Grid Padding="12,8" Background="Transparent" Canvas.ZIndex="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button x:ConnectionId='15' x:Name="MenuButton"                          Background="Transparent" Width="48" Height="48" HorizontalAlignment="Left" VerticalAlignment="Center">
                <FontIcon Glyph="&#xE700;" FontFamily="{StaticResource IconFont}" FontSize="20"/>
            </Button>
            <Button x:ConnectionId='16' x:Name="NewChatButton" Grid.Column="2"                             Background="Transparent" Width="48" Height="48" HorizontalAlignment="Right" VerticalAlignment="Center">
                <FontIcon Glyph="&#xE710;" FontFamily="{StaticResource IconFont}" FontSize="20"/>
            </Button>
        </Grid>
        
        <AutoSuggestBox Grid.Row="1" PlaceholderText="Search" Margin="16,4,16,12" QueryIcon="Find" FontFamily="{StaticResource MainFont}"/>

        <!-- Sticky Sync Status Bar -->
        <Border x:ConnectionId='11' x:Name="SyncStatusBar" Grid.Row="0" Background="{StaticResource UnisonGreenBrush}" Padding="12,6" Visibility="Collapsed">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <controls:ModernProgressRing IsActive="True" Width="16" Height="16" Foreground="White"/>
                <TextBlock x:ConnectionId='14' x:Name="SyncStatusText" Text="Updating..." Foreground="White" FontSize="13" 
                           FontFamily="Segoe UI Variable" VerticalAlignment="Center" Margin="10,0,0,0"/>
            </StackPanel>
        </Border>
        
        <ListView x:ConnectionId='12' Grid.Row="3" x:Name="ChatList" 
                                              
                  ItemTemplate="{StaticResource ChatItemTemplate}"
                  SelectionMode="Single"
                                                              
                  Margin="0,8,0,0"/>
        
        <!-- Loading overlay (only for absolute first load/empty list) -->
        <Grid x:ConnectionId='13' x:Name="ChatLoadingOverlay" Grid.Row="3" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Visibility="Visible">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <controls:ModernProgressRing IsActive="True" Width="36" Height="36"/>
                <TextBlock Text="Initial Sync..." FontSize="14" Foreground="#888" Margin="0,16,0,0" HorizontalAlignment="Center" FontFamily="{StaticResource MainFont}"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>

